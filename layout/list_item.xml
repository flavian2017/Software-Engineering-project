<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="115dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#BE484848"
    android:padding="10dp">

    <TextView
        android:id="@+id/name_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="20dp"
        android:textColor="#E4E4E4"
        android:textSize="16sp"
        android:text="name : " />
    <TextView
        android:id="@+id/name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="#E4E4E4"
        android:textSize="16sp"
        tools:text="NAME" />
    <TextView
    android:id="@+id/number_label"
    app:layout_constraintTop_toBottomOf="@id/name"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-medium"
    android:paddingBottom="20dp"
    android:textColor="#E4E4E4"
    android:textSize="16sp"
    android:text="Phone no. :  " />

    <TextView
        app:layout_constraintStart_toEndOf="@id/number_label"
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="#E4E4E4"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="PHONE NUMBER" />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="#E4E4E4"
        android:textSize="18sp"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"

        tools:text="GOA" />


    <ImageView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="4dp"
        android:layout_marginStart="70dp"
        android:src="@drawable/baseline_keyboard_arrow_down_34"
        app:layout_constraintTop_toBottomOf="@id/from"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        />

    <TextView
        android:id="@+id/dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/to"
        android:fontFamily="sans-serif-medium"
        android:textColor="#E4E4E4"
        android:textSize="18sp"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/to"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:textAllCaps="true"
        tools:text="MUMBAI" />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dest"
        android:fontFamily="sans-serif-medium"
        android:textColor="#E4E4E4"
        android:textSize="16sp"
        android:text="date : "
        app:layout_constraintTop_toBottomOf="@id/number"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dest"
        android:fontFamily="sans-serif-medium"
        android:textColor="#E4E4E4"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/date_label"
        app:layout_constraintTop_toBottomOf="@id/number"
        tools:text="08/09/2024" />

    <TextView
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/dest"
        android:fontFamily="sans-serif-medium"
        android:textColor="#D25454"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/date"
        tools:text="cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>


